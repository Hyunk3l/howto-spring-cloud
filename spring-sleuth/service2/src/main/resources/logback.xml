<configuration>
    <appender name="CONSOLE_APP" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%relative [%thread] [trace=%mdc{X-Trace-Id:-},span=%mdc{X-Span-Id:-}] %level %logger.%method - [%d{dd/MM/yyyy:HH:mm:ss.SSS Z}] %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_APP" />
    </root>
</configuration>


